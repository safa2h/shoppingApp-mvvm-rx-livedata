<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_comment"
    android:padding="16dp">

    <TextView
        android:id="@+id/commentTitleTv_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textAppearance="@style/TextAppearance.MyTheme.Body1"
        tools:text="عنوان کامنمت"
        app:layout_constraintEnd_toStartOf="@+id/comment_data_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MyTheme.Body2"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/commentTitleTv_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="تاریخ" />

    <TextView
        android:id="@+id/comment_auther_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="نویسنده"
        android:textColor="?android:textColorSecondary"
        android:textAppearance="@style/TextAppearance.MyTheme.Body2"
        app:layout_constraintStart_toStartOf="@+id/commentTitleTv_item"
        app:layout_constraintTop_toBottomOf="@+id/commentTitleTv_item" />

    <TextView
        android:id="@+id/commnet_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="right"
        android:textAppearance="@style/TextAppearance.MyTheme.Body2"
        tools:text="متن مسنیدبکشدسیبدشسیخبدخسیبدسیشبشسیلشسیلشسیلشلشسیل صلشسیل شلبشسیل شسی سی ل "
        app:layout_constraintEnd_toEndOf="@+id/comment_data_tv"
        app:layout_constraintStart_toStartOf="@+id/comment_auther_tv"
        app:layout_constraintTop_toBottomOf="@+id/comment_auther_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>